<%- include('../includes/header.ejs') %>
<link rel="stylesheet" href="/css/form.css">
</head>

<body>
    <%- include('../includes/navigation.ejs') %>
    <div class="main">
        <% if (errorMeassage) { %>
            <div class="user-message user-message--error"><%= errorMeassage %></div>
        <% } %>
        <div class="container">
        <h1><%= pageTitle %></h1>
        <form action="/admin/get-all-user" method="POST" enctype="multipart/form-data">
            <div class="form-group">
              <label for="email">Email</label>
              <input 
               class="<%= validationErrors.find(e => e.param === 'email') ? 'invalid' : '' %> form-control form-edit-movie-item"
                type="text" 
                name="email" 
                id="email" 
                value="<% if (editing || hasError) { %><%= user.email %><% } %>">
            </div>

            <div class="form-group">
                <label for="password">Password</label>
                <input 
                 class="<%= validationErrors.find(e => e.param === 'password') ? 'invalid' : '' %> form-control form-edit-movie-item"
                  type="password" 
                  name="password" 
                  id="password"
                  value="<% if (editing || hasError) { %><%= user.password %><% } %>"
                  placeholder="Enter Your password" >
              </div>

            <input type="hidden" name="_csrf" value="<%= csrfToken %>">

            <% if (editing) { %>
                <input type="hidden" value="<%= user._id %>" name="userId">
            <% } %>
            
            <button type="submit" class="btn btn-primary">Submit</button>
          </form>
    </div>

    </div>
<%- include('../includes/footer.ejs') %>