<div class="body-container-admin">

    <div class="body-admin-header">
        <p class="body-admin-header-title"><%= pageTitle %></p>
    </div>
            
    
    <div class="container container-body-editmovie">
            <% if (errorMeassage) { %>
                <div class="alert alert-danger user-edit-message-error" role="alert" style="text-align: center;"><%= errorMeassage %></div>
            <% } %>
    
            <form action="/admin/<% if (editing) { %>edit-movie?_method=PUT<% } else {%>add-movie<% } %>" method="POST" enctype="multipart/form-data">
                <div class="form-group-container">
                    <div class="form-group-container-item">
                        <div class="form-group">
                        <label for="name">Name Film</label>
                        <input 
                            class="form-control form-edit-movie-item-name"
                            type="text" 
                            name="name" 
                            id="name" 
                            value="<%= oldInput.name %>">
                        </div>
            
                        <div class="form-group">
                            <label for="movieurl">Movie URL</label>
                            <input 
                            class="form-control form-edit-movie-item-movieUrl"
                            type="text" 
                            name="movieurl" 
                            id="movieurl" 
                            value="<%= oldInput.movieUrl %>">
                        </div>
                    </div>
                    
                    <div class="form-group">
                        <label for="description">Description</label>
                        <textarea 
                        class="form-control form-edit-movie-item-description"
                        type="text" 
                        name="description" 
                        id="description" 
                        rows="5"
                        ><%= oldInput.description %></textarea>
                    </div>
                </div>


                <div class="form-group-container">
                    <div class="form-group-container-item">

                        <div class="form-group">
                            <label for="director">Director</label>
                            <input 
                            class="form-control form-edit-movie-item-director"
                            type="text" 
                            name="director" 
                            id="director" 
                            value="<%=  oldInput.director %>">
                        </div>

                        <div class="form-group">
                            <label for="national">National</label>
                            <input 
                            class="form-control form-edit-movie-item-national"
                            type="text" 
                            name="national" 
                            id="national" 
                            value="<%= oldInput.national  %>">
                        </div>
                        <div class="form-group">
                            <label for="character">Character</label>
                            <input 
                            class="form-control form-edit-movie-item-character"
                            type="text" 
                            name="character" 
                            id="character" 
                            value="<%= oldInput.character %>">
                        </div>
                    </div>

                    <div class="form-group-container-item">
                        <div class="form-group">
                        <label for="image">Image</label>
                        <input type="file" class="form-control form-edit-movie-item-image" name="image" id="image" >
                        </div>
                        <div class="form-group">
                            <label for="producer">Producer</label>
                            <input 
                            class="form-control form-edit-movie-item-producer"
                            type="text" 
                            name="producer" 
                            id="producer" 
                            value="<%=  oldInput.producer %>">
                        </div>
                
                        <div class="form-group">
                            <label for="typeFilm">Typefilm</label>
                            <input 
                            class="form-control form-edit-movie-item-typefilm"
                            type="text" 
                            name="typeFilm" 
                            id="typeFilm" 
                            value="<%=  oldInput.typeFilm  %>">
                        </div>

                    </div>
                    
                    
                </div>
                <div class="btn-form-group-submit">

                    <button type="submit" class="btn btn-primary btn-edit-movie">Submit</button>
                </div>
            
                <% if (editing) { %>
                    <input type="hidden" value="<%= movieId %>" name="movieId">
                <% } %>

                <input type="hidden" name="_csrf" value="<%= csrfToken %>">
    
            </form>
        </div>

</div>

