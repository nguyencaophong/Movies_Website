<%- include('../includes/header.ejs') %>
<link rel="stylesheet" href="/css/main.css">
<link rel="stylesheet" href="/css/base.css">
<link rel="stylesheet" href="/css/form.css">
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">

</head>

<body>
    <%- include('../includes/navigation.ejs') %>
    <div class="main">
        <% if (errorMessage) { %>
            <div class="user-message user-message--error"><%= errorMessage %></div>
        <% } %>
        <div class="container">
    
        <form action="/admin/<% if (editing) { %>edit-movie<% } else { %>add-movie<% } %>" method="POST" enctype="multipart/form-data">
            <div class="form-group">
              <label for="name">name</label>
              <input 
                class="form-control"
                type="text" 
                name="name" 
                id="name" 
                value="<% if (editing || hasError) { %><%= movie.name %><% } %>">
            </div>
    
            <div class="form-group">
              <label for="image">Image</label>
              <input type="file" class="form-control" name="image" id="image" value="<% if (editing || hasError) { %><%= movie.image %><% } %>">
            </div>
    
            <div class="form-group">
                <label for="description">Description</label>
                <input 
                class="form-control"
                type="text" 
                name="description" 
                id="description" 
                rows="5"
                value="<% if (editing || hasError) { %><%= movie.description %><% } %>">
            </div>
    
            <div class="form-group">
                <label for="director">Director</label>
                <input 
                class="form-control"
                type="text" 
                name="director" 
                id="director" 
                value="<% if (editing || hasError) { %><%= movie.director %><% } %>">
            </div>
    
            <div class="form-group">
                <label for="character">Character</label>
                <input 
                class="form-control"
                type="text" 
                name="character" 
                id="character" 
                value="<% if (editing || hasError) { %><%= movie.character %><% } %>">
            </div>
    
            <div class="form-group">
                <label for="national">National</label>
                <input 
                class="form-control"
                type="text" 
                name="national" 
                id="national" 
                value="<% if (editing || hasError) { %><%= movie.national %><% } %>">
            </div>
    
            <div class="form-group">
                <label for="producer">Producer</label>
                <input 
                class="form-control"
                type="text" 
                name="producer" 
                id="producer" 
                value="<% if (editing || hasError) { %><%= movie.producer %><% } %>">
            </div>
    
            <div class="form-group">
                <label for="typeFilm">Typefilm</label>
                <input 
                class="form-control"
                type="text" 
                name="typeFilm" 
                id="typeFilm" 
                value="<% if (editing || hasError) { %><%= movie.typeFilm %><% } %>">
            </div>
    
            <button type="submit" class="btn btn-primary">Submit</button>
          </form>
    </div>

    </div>
<%- include('../includes/footer.ejs') %>