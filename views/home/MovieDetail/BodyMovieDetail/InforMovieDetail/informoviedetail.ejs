<div class="container container-detail-body">
    <div class="row">
        <div class="col-md-6 container-detail-body-img">
            <div class="container-detail-body-img-content">
                <img class="container-detail-body-img-detail" src="/<%= movie.imageUrl %>" alt="fsadf">
                <div class="poster-button">
                    <a class="btn-detail-body-watch" href="/watching/ONE PIECE" \>XEM PHIM</a>
                </div>
            </div>
        </div>

        <div class="col-md-6 container-detail-body-detail">
            <div class="container-detail-body-title">
                <span class="detail-body-title-name">
                    <div class="title-name-text">
                        <%= movie.name %>
                    </div>
                    <button id="add-to-cart-icon" style="border-radius: 50%; background-color: #1a2023; border: none;">
                        <i class="fa-solid fa-heart icon-cart-tym" id="add-to-cart-icon"></i>
                    </button>
                </span>
                <span class="detail-body-title-year">Word of Honor (2022)</span>
            </div>

            <div class="container-scroll-bar">
                <div class="container-detail-body-content">
                    <p>Trang Thai: </p>
                    <p>Sap Chieu: </p>
                    <p>Đạo diễn: <%= movie.director %>
                    </p>
                    <p>Thoi luong: </p>
                    <p>Quoc Gia: <%= movie.national %>
                    </p>
                    <p>Nha san xua: <%= movie.producer %>
                    </p>
                    <p>Dien Vien: <%= movie.character %>
                    </p>
                    <p>The Loai: <%= movie.typeFilm %>
                    </p>
                </div>
            </div>

            <div class="container-detail-body-footer">

            </div>
        </div>
    </div>
</div>


<!-- Form hidden post cart  -->
<form name="form-add-to-cart" method="POST">
    <input id="hiddent-objectId" type="hidden"  name="objectId" value="<%= movie._id %>">
    <input id="hidden-csrf" type="hidden" name="_csrf" value="<%= csrfToken %>">
</form>

<script src="../../../../js/addtoCart.js"></script>
